<% if current_user.managers.exclude?(@manager)%>
  <%= button_to add_path, :method => 'post', :params => { :id => @manager.id }  do %>
    Add <%= @manager.name %> to portfolio!
  <% end %>

<% else %>

  <%= button_to unfollow_path, :method => 'post', :params => { :manager_id => @manager.id }  do %>
    Remove <%= @manager.name %> from portfolio!
  <% end %>
<% end %>


<div class="container">
  <h1><%="#{@manager.name}'s"%> Holdings</h1>
  <p>Latest 13f Holdings</p>            
  <table class="table table-hover">
    <thead>
      <tr class="info">
        <th>Symbol</th>
        <th>Value</th>
        <th>Shares</th>
      </tr>
    </thead>

    <tbody>
      <% @holdings.each do |holding| %>
        <tr class="info">
            <td><%= holding.symbol %></td>
            <td>$<%= holding.value %></td>
            <td><%= holding.shares %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>